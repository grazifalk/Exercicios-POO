package br.com.residencia.poo.exerciciospdf;
/* O programa “termômetro” lê uma temperatura em graus celsius, e devolve
sua equivalência na escala fahrenheit. (Use: F = C * 1, 8 + 32)
Exemplo:
Temperatura em °C: 30°
Temperatura em °F: 86° */

public class ExercicioQuatro {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}




funcao inicio()
{
	real temperaturaC
	escreva("Qual é a temperatura em graus Celsius? ")
	leia(temperaturaC)
	real temperaturaF = (temperaturaC*1.8)+32
     escreva(temperaturaC + " °C é equivalente a " + temperaturaF + "°F")
}
}